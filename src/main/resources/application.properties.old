spring.application.name=Shop2026

spring.datasource.url=jdbc:h2:mem:shopdb
spring.datasource.driverClassName=org.h2.Driver
spring.datasource.username=sa
spring.datasource.password=
spring.jpa.database-platform=org.hibernate.dialect.H2Dialect

spring.h2.console.enabled=true
spring.h2.console.path=/h2-console

spring.jpa.show-sql=true
spring.jpa.hibernate.ddl-auto=update

# --- Configuration Kafka ---
spring.kafka.bootstrap-servers=localhost:9092
spring.kafka.consumer.group-id=shop-group
spring.kafka.consumer.auto-offset-reset=earliest
# Ne pas faire planter si le topic n'existe pas au démarrage
spring.kafka.listener.missing-topics-fatal=false
# Reconnexion automatique des listeners si Kafka est down
spring.kafka.consumer.properties.reconnect.backoff.ms=1000
spring.kafka.consumer.properties.reconnect.backoff.max.ms=10000
# Faire crasher Kafka plus vite si Kafka est down
spring.kafka.producer.properties.max.block.ms=5000
# spring.kafka.producer.properties.request.timeout.ms=1000
# spring.kafka.producer.properties.delivery.timeout.ms=2000
# On sérialise les clés en String et les valeurs (objets) en JSON
spring.kafka.producer.key-serializer=org.apache.kafka.common.serialization.StringSerializer
spring.kafka.producer.value-serializer=org.springframework.kafka.support.serializer.JsonSerializer
spring.kafka.consumer.key-deserializer=org.apache.kafka.common.serialization.StringDeserializer
spring.kafka.consumer.value-deserializer=org.springframework.kafka.support.serializer.JsonDeserializer
# Pour faire confiance aux packages lors de la désérialisation JSON
spring.kafka.consumer.properties.spring.json.trusted.packages=*